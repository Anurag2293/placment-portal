<%- include('partials/header') %>

<div class="container">
    <h1 class="headings mx-auto md-5">Welcome to NIT Trichy!</h1>
    <p>Please fill the below form for your application to be started with us.</p>
    <div class="row mx-auto">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <!-- Makes POST request to /signup route -->
                    <form action="/company/signup" method="post">

                        <div class="form-group">
                            <label for="companyName">Company Name</label>
                            <input type="name" class="form-control" name="companyName" required>
                        </div>

                        <div class="form-group mt-4">
                            <label for="companyEmail">Email</label>
                            <input type="email" class="form-control" name="companyEmail" required>
                        </div>
                        <div class="form-group mt-4">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" required>
                        </div>
                         <div class="form-group mt-4">
                            <label for="GSTIN Number">GSTIN Number</label>
                            <input type="password" class="form-control" name="gstinNum" required>
                        </div>


                        <div class="form-group mt-3">
                            <select class="form-select mt-4" name="branch" required>
                                <option selected> Eligible Branches </option>
                                <option value="1">Circuital</option>
                                <option value="2">Core</option>
                                <option value="3">All</option>
                            </select>
                        </div>

                        <div class="form-group mt-3">
                            <select class="form-select mt-4" name="Domain" required>
                                <option selected>Domain</option>
                                <option value="1">SDE</option>
                                <option value="2">CS/IT</option>
                                <option value="3">Data Analytics</option>
                                <option value="4">core</option>
                            </select>
                        </div>                        

                       

                        <div class="form group mt-3">
                            <label for=" mincgpa" class="form-label">Min CGPA</label>
                            <input type="Number" step="any" class="form-control" name="mincgpa" required>
                        </div>
                        <div class="form group mt-3"  >
                            <label for="floatingTextarea mt-3">Job Description </label>
                            <textarea class="form-control" rows = "5" placeholder="Enter the job description here" id="floatingTextarea"></textarea>
                          </div>

                        <button type="submit" class="btn btn-primary mt-3">SignUp</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('partials/footer') %>